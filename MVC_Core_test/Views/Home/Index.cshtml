@model MVC_Core_test.ViewModels.HomeViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>@Model.Title</h1>

@foreach (var pie in Model.Pies)
{
    <div class="col-sm-4 col-lg-4 col-md-4">
        <div class="img-thumbnail">
            <img scr="@pie.ImageThumbnailUrl" alt="" />
            <div class="figure-caption">
                <h3 class="float-right">@pie.Price.ToString("c")</h3>
                <h3>@pie.Name</h3>
                <p>@pie.ShortDescription</p>
            </div>
        </div>
    </div>
}

